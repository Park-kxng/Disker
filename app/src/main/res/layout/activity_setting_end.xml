<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".settingEndActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        tools:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_title"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="영점 처리"
                android:textColor="#002090"
                android:textSize="34sp"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/main_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:text="자세 교정을 통해 적절한 압력이 느껴질 때 \n종료 버튼을 눌러 주세요"
                android:textColor="#3E4C7B"
                android:textSize="21dp" />

        </LinearLayout>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"></WebView>

        <Button
            android:id="@+id/setting_btn_end"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/button_design"
            android:text="종료"
            android:textColor="#D30B0B"
            android:textSize="28sp"
            tools:elevation="10dp"
            tools:fontFamily="@font/bold"
            tools:layout_margin="20dp"
            tools:textStyle="bold" />
    </LinearLayout>

</LinearLayout>