<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:gravity="center">


    <LinearLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/start_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="DISKER"
            android:textColor="#002090"
            android:textSize="54sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="스마트 자세 교정앱"
            android:textColor="#3E4C7B"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/main_btn_start"
                android:layout_width="200sp"
                android:layout_height="100sp"
                android:layout_margin="10sp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/medium"
                android:text="자세 인식 시작"
                android:textColor="#999999"
                android:textSize="20sp"
                tools:elevation="30dp"
                tools:paddingBottom="5sp"
                tools:textStyle="bold" />

            <Button
                android:id="@+id/main_btn_setting"
                android:layout_width="200sp"
                android:layout_height="100sp"
                android:layout_margin="10sp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/medium"
                android:text="영점 처리 "
                android:textColor="#999999"
                android:textSize="20sp"
                tools:elevation="30dp"
                tools:layout_margin="20dp"
                tools:textStyle="bold" />

            <Button
                android:id="@+id/setting_btn_end"
                android:layout_width="200sp"
                android:layout_height="100sp"
                android:layout_margin="10sp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/medium"
                android:paddingTop="5sp"
                android:text="자세 기록 및 분석"
                android:textColor="#999999"
                android:textSize="20sp"
                tools:elevation="30dp"
                tools:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:text="6조 허리피라우"
            android:textColor="#3E4C7B"
            android:textSize="24sp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>